<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appThemeColor</item>
        <item name="colorPrimaryDark">@color/appThemeColorDark</item>
        <item name="colorAccent">@color/appThemeColorLight</item>

        <item name="actionOverflowMenuStyle">@style/OptionsMenu</item>
        <item name="actionMenuTextColor">@color/md_white_1000</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="colorControlNormal">@color/appThemeColor</item>
        <item name="colorControlActivated">@color/appThemeColor</item>
        <item name="colorControlHighlight">@color/appThemeColor</item>

    </style>

    <style name="CustomDrawerTheme" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appThemeColor</item>
        <item name="colorPrimaryDark">@color/appThemeColorDark</item>
        <item name="colorAccent">@color/appThemeColorLight</item>

        <item name="android:windowBackground">@color/appThemeColor</item>

        <item name="colorControlNormal">@color/md_grey_100</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/md_grey_100</item>

        <item name="colorButtonNormal">@color/appThemeColor</item>
        <item name="android:colorButtonNormal">@color/appThemeColor</item>


        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
        <item name="android:windowActionBarOverlay">false</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/appThemeColor</item>
        <item name="material_drawer_primary_text">@color/md_white_1000</item>
        <item name="material_drawer_primary_icon">@color/md_white_1000</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/md_white_1000</item>
        <item name="material_drawer_selected_text">@color/appThemeColor</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#fff</item>
    </style>

    <style name="menuItemColor">
        <item name="android:textColor">@color/appThemeColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/md_white_1000</item>
    </style>

    <style name="ToolbarSwitchStyle">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/md_white_1000</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/md_white_1000</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">#1e7965</item>
    </style>

    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/md_white_1000</item>
        <item name="colorControlNormal">#24947c</item>
        <item name="colorControlHighlight">@color/md_grey_100</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/md_grey_200</item>
        <item name="android:textColor">@color/md_grey_900</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorControlNormal">@color/appThemeColorLight</item>
        <item name="colorControlHighlight">@color/appThemeColorDark</item>

        <item name="colorButtonNormal">@color/appThemeColorLight</item>
        <item name="android:colorButtonNormal">@color/appThemeColorLight</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:background">@color/appThemeColorDark</item>
    </style>

    <style name="MyCustomDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
